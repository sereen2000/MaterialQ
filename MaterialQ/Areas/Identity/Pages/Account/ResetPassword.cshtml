@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = "LayoutMain";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>Reset Password</title>

    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
</head>

<body>

    <main>
        <div class="d-flex align-items-center justify-content-center" style="min-height: 100vh; background-color: #f6f9ff;">
            <div class="card shadow-sm border-0 p-4" style="width: 100%; max-width: 420px; border-radius: 15px; background: #fff;">
                <div class="text-center mb-3">
                    <a href="/" class="logo d-flex flex-column align-items-center">
                        <img src="~/img/LOGO_page.png" alt="Logo" style="width: 70px;">
                        <span class="fs-5 fw-semibold text-primary mt-2">Art Of Quote</span>
                    </a>
                </div>

                <h5 class="text-center mb-3">Reset Your Password</h5>
                <p class="text-center text-muted small mb-4">Enter your email and new password below</p>

                <form method="post" class="row g-3">
                    <div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>

                    <input asp-for="Input.Code" type="hidden" />

                    <div class="col-12">
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Input.Password" class="form-label">New Password</label>
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="Enter new password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Confirm new password" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-arrow-repeat me-1"></i> Reset Password
                        </button>
                    </div>

                    <div class="col-12 text-center">
                        <p class="small mb-0">
                            Remembered your password?
                            <a asp-area="Identity" asp-page="/Account/Login">Login</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/main.js"></script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

</body>
</html>
